---
import '../styles/components/model-gallery.css';

import { models } from '../data/models.ts';
---

<div class="model-gallery">
  <h3 class="section-title">Choose Your Model</h3>
  <div class="models-grid" data-current-type="female">
    {models.map(model => (
      <div 
        class={`model-card ${model.type}`} 
        data-model-id={model.id}
        data-model-type={model.type}
      >
        <div class="model-image">
          <img src={model.image} alt={`Model ${model.name}`} />
          <div class="model-overlay">
            <div class="select-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20,6 9,17 4,12"></polyline>
              </svg>
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>
</div>

<script>
  import '../scripts/components/ModelGallery.ts';
</script>

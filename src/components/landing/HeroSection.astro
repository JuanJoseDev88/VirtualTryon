---
import { createTranslator, DEFAULT_LANGUAGE } from '../../i18n/index';
import promotionalImage from '../../assets/promotional.webp';

// Use default language for server-side rendering
const t = createTranslator(DEFAULT_LANGUAGE);
---

<div class="hero-content">
  <div class="hero-text">
    <h1 class="hero-title">
      <span class="title-line-1" data-i18n="landing.hero.title">{t('landing.hero.title')}</span>
      <span class="title-line-2 gradient-text" data-i18n="landing.hero.titleHighlight">{t('landing.hero.titleHighlight')}</span>
    </h1>
    <p class="hero-subtitle" data-i18n="landing.hero.subtitle">
      {t('landing.hero.subtitle')}
    </p>
    <div class="hero-buttons">
      <a href="/app" class="primary-button">
        <span data-i18n="landing.hero.startTryOn">{t('landing.hero.startTryOn')}</span>
      </a>
    </div>
  </div>
  <div class="hero-visual">
    <div class="promotional-container">
      <img src={promotionalImage.src} alt="{t('app.imageAlt.modelPreview')}" class="promotional-img" data-i18n-alt="app.imageAlt.modelPreview">
      <div class="image-overlay">
        <div class="overlay-text">
          <span class="overlay-line-1">LIVE FOR</span>
          <span class="overlay-line-2">FASHION</span>
        </div>
      </div>
    </div>
    <div class="geometric-shapes">
      <div class="shape shape-1"></div>
      <div class="shape shape-2"></div>
      <div class="shape shape-3"></div>
    </div>
  </div>
</div>
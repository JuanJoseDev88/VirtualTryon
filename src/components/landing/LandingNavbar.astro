---
import LanguageSwitcher from '../LanguageSwitcher.astro';
import { createTranslator, DEFAULT_LANGUAGE } from '../../i18n/index';

// Use default language for server-side rendering
const t = createTranslator(DEFAULT_LANGUAGE);
---

<nav class="navbar">
  <div class="nav-brand">
    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
      <polyline points="7.5,12 12,15 16.5,12"></polyline>
      <polyline points="12,22 12,15"></polyline>
    </svg>
    <span class="brand-text" data-i18n="common.brand">{t('common.brand')}</span>
  </div>
  <div class="nav-links">
    <LanguageSwitcher />
    <a href="#features" class="nav-link" data-i18n="navigation.features">{t('navigation.features')}</a>
    <a href="#how-it-works" class="nav-link" data-i18n="navigation.howItWorks">{t('navigation.howItWorks')}</a>
    <a href="#demo" class="nav-link" data-i18n="navigation.demo">{t('navigation.demo')}</a>
    <a href="/app" class="cta-button" data-i18n="navigation.tryNow">{t('navigation.tryNow')}</a>
  </div>
</nav>